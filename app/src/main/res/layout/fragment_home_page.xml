<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/action_bar"
        android:elevation="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="7dp"
            android:layout_marginHorizontal="20dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/search_bar"
                android:src="@drawable/layer" />


            <TextView
                android:id="@+id/pageTitel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/search_bar"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:fontFamily="@font/poppins_thin"
                android:textSize="18sp"/>

            <androidx.appcompat.widget.SearchView
                android:id="@+id/search_bar"
                android:layout_width="0dp"
                app:iconifiedByDefault="false"
                android:background="@drawable/search_style"
                android:layout_marginHorizontal="5dp"
                android:layout_height="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginVertical="7dp"
                app:layout_constraintStart_toStartOf="@id/logo"
                app:layout_constraintEnd_toStartOf="@id/flterBtn"
                app:layout_constraintTop_toTopOf="@id/flterBtn"
                />
            <ImageButton
                android:layout_marginVertical="7dp"
                android:layout_marginTop="5dp"
                android:id="@+id/flterBtn"
                android:layout_width="30dp"

                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="30dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_baseline_filter_list_24"
                app:layout_constraintTop_toBottomOf="@id/pageTitel"
                app:layout_constraintEnd_toEndOf="@id/pageTitel"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:id="@+id/viewPager2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent "
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="20dp"
        android:elevation="20dp"
        android:layout_height="150dp"/>

    <TextView
        android:id="@+id/tvProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/viewPager2"
        android:layout_marginVertical="15dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:text="Products"
        android:fontFamily="@font/poppins_thin"
        android:textColor="@color/black"
        android:textSize="20sp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProduct"
        android:layout_width="0dp"
        android:overScrollMode="never"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/tvProduct"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>